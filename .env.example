# =============================================================================
# CSTP Server Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
#
# Required variables are marked with [REQUIRED]
# =============================================================================

# -----------------------------------------------------------------------------
# Authentication [REQUIRED]
# -----------------------------------------------------------------------------

# Comma-separated list of agent:token pairs for API authentication
# Format: agent1:token1,agent2:token2
# Example: emerson:abc123,claude:xyz789
CSTP_AUTH_TOKENS=your_agent:your_secret_token_here

# -----------------------------------------------------------------------------
# Vector Store Backend (F048)
# -----------------------------------------------------------------------------

# Backend: chromadb | memory (default: chromadb)
# Use "memory" for development/testing without ChromaDB
VECTOR_BACKEND=chromadb

# -----------------------------------------------------------------------------
# Embedding Provider (F048)
# -----------------------------------------------------------------------------

# Provider: gemini (default: gemini)
EMBEDDING_PROVIDER=gemini

# Gemini API key for text embeddings (gemini-embedding-001 model) [REQUIRED]
# Get one at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Server bind address (default: 0.0.0.0)
CSTP_HOST=0.0.0.0

# Server port (default: 8100)
CSTP_PORT=8100

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# ChromaDB Configuration
# -----------------------------------------------------------------------------

# ChromaDB URL (default: http://chromadb:8000 for docker-compose)
# Use http://localhost:8000 if running ChromaDB separately
CHROMA_URL=http://chromadb:8000

# ChromaDB authentication token (optional, if ChromaDB requires auth)
# CHROMA_TOKEN=

# -----------------------------------------------------------------------------
# Guardrails Configuration
# -----------------------------------------------------------------------------

# Colon-separated paths to guardrail YAML directories (optional)
# Guardrails are loaded from these paths in order
# GUARDRAILS_PATHS=/app/guardrails:/custom/guardrails

# -----------------------------------------------------------------------------
# Decisions Configuration (for cstp.recordDecision)
# -----------------------------------------------------------------------------

# Path where decision YAML files are stored
# Default: decisions (relative to working directory)
DECISIONS_PATH=/app/decisions

# ChromaDB collection name for decision indexing
CHROMA_COLLECTION=decisions_gemini

# -----------------------------------------------------------------------------
# Agent Card (for A2A discovery)
# -----------------------------------------------------------------------------

# Agent name shown in /.well-known/agent.json
CSTP_AGENT_NAME=cognition-engines

# Agent description
CSTP_AGENT_DESCRIPTION=Decision Intelligence Service - Semantic search and guardrail evaluation

# Agent version (should match package version)
CSTP_AGENT_VERSION=0.7.0

# Public URL where the agent is accessible (for agent card)
# CSTP_AGENT_URL=https://your-domain.com

# Contact email (optional)
# CSTP_AGENT_CONTACT=admin@your-domain.com
